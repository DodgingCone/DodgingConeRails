<div class="col-md-6">
  <h1><%= @player.username %>'s profile</h1>
  <% if current_player.id == @player.id %>
    <h4 class="text-muted">This is how other users will see you</h4>
  <% end %>

  <%= render 'profile' %>

  <% if current_player.id == @player.id %>
  <%= link_to 'Edit', profiles_edit_path, class: "btn btn-info" %>
  <% end %>
</div>
