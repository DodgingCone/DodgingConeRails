<blockquote id="<%= comment.id %>" class="comment">
  <%= link_to "\##{comment.id}", class: 'comment-link' do %>
    <i class="glyphicon glyphicon-link"></i>
  <% end %>
  <% if current_player.id == comment.score.player.id %>
    <%= link_to comment_path(comment), method: :delete, data: { confirm: 'Are you sure?' }, class: 'comment-remove' do %>
      <i class="glyphicon glyphicon-trash"></i>
    <% end %>
  <% end %>
  <p><%= comment.body %></p>
  <footer>
    By <%= comment.player.name %>
  </footer>
</blockquote>
